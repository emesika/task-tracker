# ---- networking ----
NETWORK_NAME=tasknet

# ---- image/container ----
IMAGE_TAG=task-app:latest
CONTAINER_NAME=task-app
CONTAINERFILE=Containerfile

# ---- app ports ----
HOST_PORT=8000
CONTAINER_PORT=8000

# ---- database env (passed to container) ----
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=task-postgres
DB_PORT=5432
DB_NAME=task_tracker_db
DB_VOLUME_NAME=task_pg
DB_CONTAINER_NAME=task-postgres
DB_IMAGE=docker.io/library/postgres:16-alpine
DB_HOST_PORT_MAP=5432:5432   # set empty to avoid host publishing, e.g. ""

# ---- healthcheck (optional knobs) ----
HEALTH_INTERVAL=10s
HEALTH_TIMEOUT=3s
HEALTH_RETRIES=5
APP_HEALTHY_STATUS_TIMEOUT=30
